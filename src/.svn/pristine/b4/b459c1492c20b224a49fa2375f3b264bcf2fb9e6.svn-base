/* Style the input container */
.input-container {
    display: flex;
    width: 100%;
    margin-bottom: 15px;
}

/* Style the input fields */
.input-field {
    width: 100%;
    padding: 10px;
    outline: none;
}

.input-field:focus {
    border: 2px solid dodgerblue;
}

.overlayButton{
    position: relative;
}

.badge-info {
    color: #fff;
    background-color: #17a2b8;
    border-radius: 50%;
    color: #000;
}

.myImage {
    width: 100px;
    height: 100px;
    position: relative;
    margin: 15%;
}

.clickable{
       cursor: pointer;
       cursor: hand;
   }
   
   .images:hover
	{
/*		-moz-box-shadow: 0 0 10px #ccc;
		-webkit-box-shadow: 0 0 10px #ccc;
		box-shadow: 0 0 10px #ccc;*/
                -webkit-transform: scale(1.1);
        -ms-transform: scale(1.1);
        transform: scale(1.1);
	}
       
        .images:hover .image {
  opacity: 0.3;
}



.image {
  opacity: 1;
  display: block;
  width: 100%;
  height: auto;
  transition: .5s ease;
  backface-visibility: hidden;
}

.middle {
  transition: .5s ease;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
}
.middle1 {
  transition: .5s ease;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
}

.images1:hover .image {
  opacity: 0.3;
}

.images1:hover .middle {
  opacity: 1;
}
.images:hover .middle1 {
  opacity: 1;
}

.text1 {
  background-color: #e54c2a;
  color: white;
  font-size: 16px;
  padding: 16px 32px;
  border-radius: 5%;
  cursor: pointer;
  cursor: hand;
}
.text2 {
  background-color: #009933;
  color: white;
  font-size: 16px;
  padding: 16px 32px;
  border-radius: 5%;
