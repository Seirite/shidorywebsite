<div class="row" style="margin-left: 5%; margin-right: 5%;">
    <div align="start">
        <i class="icofont icofont-social-google-map" style="color: #e54c2a; font-size: xx-large;"></i>
    </div>
    <div align="center" style="margin-left: 20%;">
        <h2 class="text-muted">
            <strong style="color: #F96302;">Track Your Order</strong>
        </h2>
    </div>
</div>
<div class="mat-elevation-z1" style="background-color: #F96302; color: white; font-weight: bolder;">
    <div class="row" style="margin-left: 5%; margin-right: 5%;">
        <div align="start">
            <p style="font-size: large; margin-top: 4%;">Order Id :</p>
        </div>
        <div align="center" style="margin-left: 23%;">
            <p class="restroName">{{trackOrderObject.ORDER_ID}}</p>
        </div>
    </div>
    <div class="row" style="margin-left: 5%; margin-right: 5%;">
        <div align="start">
            <p style="font-size: large; margin-top: 2%;">Delivery To :</p>
        </div>
        <div align="start" style="margin-left: 5%; margin-top: 1%;">
            <p>{{trackOrderObject.SELECT_ADDRESS}}</p>
        </div>
    </div>
    <div class="row" style="margin-left: 5%; margin-right: 5%;">
        <div align="start">
            <p style="font-size: large; margin-top: 2%;">Cart Total Price :</p>
        </div>
        <div align="center" style="margin-left: 5%; margin-top: 1%;">
            <p>{{trackOrderObject.RESTRO_USER_CART_CURRENCY}} {{trackOrderObject.RESTRO_USER_CART_TOTAL}}</p>
        </div>
    </div>
    <div class="row" style="margin-left: 5%; margin-right: 5%;" *ngIf="RESTRO_USER_CART_COUPON_DISCOUNT_NAME">
        <div align="start">
            <p style="font-size: large; margin-top: 2%;">After Apply Coupon :</p>
        </div>
        <div align="center" style="margin-left: 5%; margin-top: 1%;">
            <p>{{trackOrderObject.RESTRO_USER_CART_COUPON_DISCOUNT_NAME}} ({{trackOrderObject.RESTRO_USER_CART_DISCOUNT_TOTAL}})</p>
        </div>
    </div>
    <div class="row" style="margin-left: 5%; margin-right: 5%;" *ngIf="userOTP">
        <div align="start">
            <p style="font-size: large; margin-top: 2%;">OTP :</p>
        </div>
        <div align="center" style="margin-left: 5%; margin-top: 1%;">
            <p>{{userOTP}}</p>
        </div>
    </div>
</div>
<div class="md-stepper-horizontal orange" *ngFor="let orderStatus of deliveryStatusList">
    <div class="md-step active done">
        <div class="md-step-circle"><span>1</span></div>
        <div class="md-step-title">{{orderStatus.title}}</div>
        <div class="md-step-optional" style="margin-top: 2px;">{{orderStatus.Date.toDate() | date:'medium'}}</div>
        <div class="md-step-bar-left"></div>
        <div class="md-step-bar-right"></div>
    </div>
    <div class="md-step active location" *ngIf="showMap==true">
      <div class="md-step-circle"><span>2</span></div>
      <div class="md-step-title">Delivered</div>
      <div class="md-step-optional">{{trackOrderObject.SELECT_ADDRESS}}</div>
      <div class="md-step-bar-left"></div>
      <div class="md-step-bar-right"></div>
    </div>
</div>
<agm-map [latitude]="lat" [longitude]="lng" [zoom]="zoom" *ngIf="showMap==true">
    <agm-direction [origin]="origin" [destination]="destination" [visible]="show"></agm-direction>
</agm-map>
